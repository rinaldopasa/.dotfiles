#
# ~/.bash_profile
#
export STARSHIP_CONFIG="$HOME/.config/starship/starship.toml"	# Starship | https://starship.rs
export VOLTA_HOME="$HOME/.volta"				# Volta | https://volta.sh
export CARGO_HOME="$HOME/.cargo"				# Cargo | https://rust-lang.github.io/rustup

# PATH
PATH="$HOME/.local/bin:$PATH"
PATH="$VOLTA_HOME/bin:$PATH"
PATH="$CARGO_HOME/bin:$PATH"

# Source ~/.bashrc
[[ -f ~/.bashrc ]] && . ~/.bashrc
